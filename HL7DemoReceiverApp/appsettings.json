{
  "Hl7": {
    // Listening port for the proxy (when acting as a listener)
    "Port": 5100,
    // Host/port to connect to as a client (when proxy acts as a client)
    "ClientHost": "127.0.0.1",
    "ClientPort": 2575,
    // HL7 ACK/identity settings
    "SendingApplication": "MySenderApp",
    "SendingFacility": "MySenderFacility",
    "ReceivingApplication": "MyReceiverApp",
    "ReceivingFacility": "MyReceiverFacility",
    "LogFilePath": "logs/hl7_{Date}.log",
    "AllowedEvents": [ "ADT^A01", "ORM^O01", "ORU^R01", "ACK^R01", "ACK^A01" ],
    "AckMode": "AA",
    "MessageDateTimeFormat": "yyyy-MM-dd HH:mm:ss",
    "DisconnectAfterAck": false,
    "IsServer": false,
    // Mode: Server, Client, or Proxy
    "Mode": "Proxy",
    // ProxyDirection: ListenerToClient (default, analyzer->proxy->LIS) or ClientToListener (LIS->proxy->analyzer)
    "ProxyDirection": "ClientToListener"
  }
}
//
// Example client config:
// "IsServer": false,
// "ClientHost": "hl7server.example.com",
// "ClientPort": 5100
// ProxyDirection: ListenerToClient (default, analyzer->proxy->LIS) or ClientToListener (LIS->proxy->analyzer)
